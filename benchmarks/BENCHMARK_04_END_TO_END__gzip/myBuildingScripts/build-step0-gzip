#!/bin/bash
#########
# FILES #
#########
PACKAGE_NAME=gzip-1.2.4a
PACKAGE_TAR_FILE=${PACKAGE_NAME}.tar.gz
PACKAGE_FTP_SITE=https://ftp.gnu.org/gnu/gzip

#########
# FILES #
#########
Input=myInput/Input.gz
STRING_200_A=$(python -c 'print "A"*200')

####################################
# REMOVE OLD STUFF JUST TO BE SURE #
####################################
rm -rf build
rm -rf ${PACKAGE_NAME}
rm -rf ${PACKAGE_TAR_FILE}

#####################################
# Get source code for buggy package #
#####################################
wget ${PACKAGE_FTP_SITE}/${PACKAGE_TAR_FILE}

######################
# Unpack it here ... #
######################
tar xf ${PACKAGE_TAR_FILE}

##########################################
# Prepare an out of tree build directory #
##########################################
mkdir build

##############################
# Get inside build directory #
##############################
cd build

#################
# Configure ... #
#################
CC=wllvm LLVM_COMPILER=clang CFLAGS="-g -O0" ../${PACKAGE_NAME}/configure

###############
# Make it !!! #
###############
LLVM_COMPILER=clang make -j

###################
# extract bitcode #
###################
extract-bc gzip

###########################################
# Create the file with long absolute name #
###########################################
cd     ../myInput
rm -rf B
mkdir  B
cd     B
mkdir  ${STRING_200_A}
cd     ${STRING_200_A}
mkdir  ${STRING_200_A}
cd     ${STRING_200_A}
mkdir  ${STRING_200_A}
cd     ${STRING_200_A}
mkdir  ${STRING_200_A}
cd     ${STRING_200_A}
mkdir  ${STRING_200_A}
cd     ${STRING_200_A}
mkdir  ${STRING_200_A}
cd     ${STRING_200_A}
cp     ../../../../../../../Input.gz .

